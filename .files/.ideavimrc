let mapleader = "\<SPACE>"

:set relativenumber
:set number 
:set idearefactormode=keep
:set ideajoin
:set scrolloff=10
:set showmode
:set sneak
:set surround

:set NERDTree
let g:NERDTreeMapActivateNode='l'
let g:NERDTreeMapJumpParent='h'

" Window navigation
sethandler <c-h> a:vim
sethandler <c-l> a:vim
sethandler <c-j> a:vim
sethandler <c-k> a:vim
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

nmap <Leader>\ :vsplit<CR>
nmap <Leader>sh :vsplit<CR>
nmap <Leader>- :split<CR>
nmap <Leader>sv :split<CR>
nmap <leader>fs :action FileStructurePopup<CR>

" Open Terminal
nmap <Leader>t :action ActivateTerminalToolWindow<CR>

" Open services
:map <Leader>s :action ActivateServicesToolWindow<CR>

" Open recent project dialog box
nmap <Leader>m :action ManageRecentProjects<CR>

" Code execution
nmap <Leader>bp :action ToggleLineBreakpoint<CR>
nmap <Leader>d :action Debug<CR>
nmap <Leader>ds :action Stop<CR>

" Code navigation
nmap <Leader>be :action Switcher<CR>
nmap <Leader>fb :action RecentFiles<CR>
nmap <Leader>ff :action GotoFile<CR>
nmap <Leader>fg :action SearchEverywhere<CR>
nmap <Leader>fp :action FindInPath<CR>
:map <Leader>cd :action GotoDeclaration<CR>
:map <s-h> :action Back<CR>
:map <s-l> :action Forward<CR>

" Nerdtree
nmap <Leader>e :NERDTreeFind<CR>
nmap <Leader>et :NERDTreeToggle<CR>

" AceJump
nmap <Leader>f :action AceAction<CR>

" Git
nmap <Leader>gs :action ActivateCommitToolWindow<CR>
nmap <Leader>gc :action CheckinProject<CR>
nmap <Leader>ga :action Git.Add<CR>
nmap <Leader>gp :action Git.Pull<CR>
nmap <Leader>gn :action Annotate<CR>
nmap <Leader>gl :action Git.Log<CR>
nmap <Leader>go :action Github.Open.In.Browser<CR>
nmap <Leader>gb :action Git.Branches<CR>
